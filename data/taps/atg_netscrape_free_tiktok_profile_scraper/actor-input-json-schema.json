{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "tags": {
            "type": "array",
            "description": "List of hashtags to extract profiles from.",
            "example": [
                "#fyp",
                "#viral"
            ]
        },
        "result_count": {
            "type": "integer",
            "description": "Maximum number of profiles to collect per tag.",
            "example": 30
        },
        "min_follower_count": {
            "type": "integer",
            "description": "Minimum number of follower",
            "example": 0
        },
        "max_follower_count": {
            "type": "integer",
            "description": "Maximum number of follower"
        },
        "has_email": {
            "type": "boolean",
            "description": "Only collect profile with contact email"
        }
    },
    "required": [
        "tags",
        "result_count",
        "min_follower_count",
        "has_email"
    ]
}