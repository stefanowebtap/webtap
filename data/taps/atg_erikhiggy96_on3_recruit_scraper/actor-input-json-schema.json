{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "recruitingClass": {
            "type": "string",
            "description": "Year of the desired recruiting class.",
            "example": "2022"
        },
        "numCroots": {
            "type": "integer",
            "description": "Amount of recruits you want to get. Max 500."
        }
    },
    "required": [
        "recruitingClass"
    ]
}