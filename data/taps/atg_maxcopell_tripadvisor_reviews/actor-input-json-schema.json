{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "startUrls": {
            "type": "array",
            "description": "Paste here a URL(s) of a specific place you want to get reviews from.",
            "example": [
                {
                    "url": "https://www.tripadvisor.com/Hotel_Review-g60763-d208453-Reviews-Hilton_New_York_Times_Square-New_York_City_New_York.html"
                }
            ]
        },
        "maxReviews": {
            "type": "integer",
            "description": "Use a large value (for example 1 million) to get all reviews from each place.",
            "example": 50
        },
        "lastReviewDate": {
            "type": "string",
            "description": "It is a date where the scraper stops loading older reviews"
        },
        "scrapeReviewerInfo": {
            "type": "boolean",
            "description": "Scrape reviewer info (name, profile picture, location etc.). You should only extract reviewer's info if you have a legit reason to do so."
        },
        "language": {
            "type": "string",
            "description": "Select the desired language",
            "example": "en",
            "enum": [
                "en",
                "ab",
                "aa",
                "af",
                "ak",
                "sq",
                "am",
                "ar",
                "an",
                "hy",
                "as",
                "av",
                "ae",
                "ay",
                "az",
                "bm",
                "ba",
                "eu",
                "be",
                "bn",
                "bh",
                "bi",
                "bs",
                "br",
                "bg",
                "my",
                "ca",
                "ch",
                "ce",
                "ny",
                "zh",
                "cv",
                "kw",
                "co",
                "cr",
                "hr",
                "cs",
                "da",
                "dv",
                "nl",
                "eo",
                "et",
                "ee",
                "fo",
                "fj",
                "fi",
                "fr",
                "ff",
                "gl",
                "ka",
                "..."
            ]
        },
        "debugLog": {
            "type": "boolean",
            "description": "Enable verbose logs for debugging purposes"
        }
    },
    "required": [
        "startUrls"
    ]
}