{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "startUrls": {
            "type": "array",
            "description": "URLs to start with.",
            "example": [
                {
                    "url": "https://www.transfermarkt.com/lionel-messi/profil/spieler/28003"
                }
            ]
        },
        "proxyConfig": {
            "type": "object",
            "description": "Use Apify Proxy or your own to run this actor.",
            "example": {
                "useApifyProxy": true
            }
        },
        "crawlDepth": {
            "type": "integer",
            "description": "How deep will the crawler follow links from the current page.",
            "example": 1
        },
        "pageDepth": {
            "type": "integer",
            "description": "How far will the crawler follow pagination links.",
            "example": 1
        }
    },
    "required": [
        "startUrls"
    ]
}